<configs>
    <title>Metrics</title>
    <author>Centreon</author>
    <email>contact@centreon.com</email>
    <website>http://www.centreon.com</website>
    <description>Chart display</description>
    <version>20.04.0</version>
    <keywords>centreon, widget, metrics, chart</keywords>
    <screenshot></screenshot>
    <thumbnail></thumbnail>
    <url>./widgets/metrics/index.php</url>
    <autoRefresh>99999999999999</autoRefresh>
    <preferences>
        <preference label="Title" name="title" defaultValue="" type="text"/>
        <preference label="Services" name="services" defaultValue="" type="serviceMulti" header="Resources"/>
        <preference label="Metrics" name="metrics" defaultValue="" type="metricMulti"/>
        <preference label="Graph period" name="graph_period" defaultValue="86400" type="list" header="Filter">
            <option value="10800" label="Last 3 hours"/>
            <option value="21600" label="Last 6 hours"/>
            <option value="43200" label="Last 12 hours"/>
            <option value="86400" label="Last 24 hours"/>
            <option value="172800" label="Last 2 days"/>
            <option value="259200" label="Last 3 days"/>
            <option value="432000" label="Last 5 days"/>
            <option value="604800" label="Last 7 days"/>
            <option value="1209600" label="Last 14 days"/>
            <option value="2419200" label="Last 28 days"/>
            <option value="2592000" label="Last 30 days"/>
            <option value="2678400" label="Last 31 days"/>
            <option value="5184000" label="Last 2 months"/>
            <option value="15552000" label="Last 6 months"/>
            <option value="31104000" label="Last year"/>
        </preference>
        <preference label="Display status" name="display_status" defaultValue="0" type="boolean"/>
        <preference label="Display acknowledgements" name="display_acknowledgements" defaultValue="1" type="boolean"/>
        <preference label="Display downtimes" name="display_downtimes" defaultValue="1" type="boolean"/>
        <preference label="Stacked" name="stacked" defaultValue="0" type="boolean"/>
        <preference label="Size to max" name="size_to_max" defaultValue="0" type="boolean"/>
    </preferences>
</configs>
